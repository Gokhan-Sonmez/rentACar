package com.btkAkademi.rentACar.business.concretes;

import java.util.List;
import java.util.stream.Collectors;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.btkAkademi.rentACar.business.abstracts.CarService;
import com.btkAkademi.rentACar.business.dtos.BrandListDto;
import com.btkAkademi.rentACar.business.dtos.CarListDto;
import com.btkAkademi.rentACar.core.utilities.mapping.ModelMapperServices;
import com.btkAkademi.rentACar.dataAccess.abstracts.CarDao;
import com.btkAkademi.rentACar.entities.concretes.Brand;
import com.btkAkademi.rentACar.entities.concretes.Car;

@Service
public class CarManager implements CarService {

	private CarDao carDao;
	private ModelMapperServices modelMapperServices;
	@Autowired
	public CarManager(CarDao carDao, ModelMapperServices modelMapperServices) {
		
		this.carDao = carDao;
		this.modelMapperServices = modelMapperServices;
	}
	@Override
	public List<CarListDto> getAll() {
		public List<CarListDto> getAll() {
			List<Car> carList = this.carDao.findAll()	;
			List<CarListDto> reponse = carList.stream()
					.map(brand->modelMapperService.forDto()
					.map(brand, CarListDto.class))
					.collect(Collectors.toList());
			
			return reponse;
	}
	
	
	
}
